@model IEnumerable<ECommerce.Models.ProductDto>




<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Products</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
           

            <th>
                Update
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => product.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => product.Description)
            </td>
           

            <td>
                <a asp-action="Update" asp-route-id="@product.Id">Update</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@product.Id">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<button style="background-color:wheat;"><a asp-controller="Product" asp-action="Create">Add Brand</a> </button>
