@model IEnumerable<ECommerce.Models.CategoryDto>




<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Brands</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
          


            <th>
                Update
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => category.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => category.Description)
            </td>
           
            <td>
                <a asp-action="Update" asp-route-id="@category.Id">Update</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@category.Id">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@category.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<button style="background-color:wheat;"><a asp-controller="Category" asp-action="Create">Add Category</a> </button>
