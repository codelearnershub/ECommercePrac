@model ECommerce.Models.CreateBrandRequestModel



<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Create</h1>
                    <p class="tagcolor" style="color:mediumblue">Please fill in this form to create an Brand.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="BrandName" class="control-label"></label>
                            <input asp-for="BrandName" class="form-control" />
                            <span asp-validation-for="BrandName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="SKU" class="control-label"></label>
                            <input asp-for="SKU" class="form-control" />
                            <span asp-validation-for="SKU" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label class="control-label">Product</label>
                            <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products" required>
                                <option value="">--Select Products--</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label class="control-label">Product</label>
                            <select asp-for="Stores" class="form-control" asp-items="ViewBag.Stores" required>
                                <option value="">--Select Stores--</option>
                            </select>
                        </div>
                     @*   <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label class="control-label">Product</label>
                            <select asp-for="BrandImage" class="form-control" asp-items="ViewBag.Products" required>
                                <option value="">--Select Products--</option>
                            </select>
                        </div>*@
                    </div>

                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}