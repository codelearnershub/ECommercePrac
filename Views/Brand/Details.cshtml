@model ECommerce.Models.BrandDto


<dl class="row">
    <dt class="col-sm-2">
        Name:
    </dt>
    <dd class="col-sm-10">
        @Model.BrandName
    </dd>
    <dt class="col-sm-2">
        Image:
    </dt>
    <dd class="col-sm-10">
        <img class="card-img" style="height:200px; width:200px" src="~/images/@Model.BrandImage" />
    </dd>
    <dt class="col-sm-2">
        Brand Status:
    </dt>
    <dd class="col-sm-10">
        @Model.BrandStatus
    </dd>
    <dt class="col-sm-2">
        Product Name:
    </dt>
    <dd class="col-sm-10">
        @Model.ProductName
    </dd>
    <dt class="col-sm-2">
        SKU:
    </dt>
    <dd class="col-sm-10">
        @Model.SKU
    </dd>
    <dt>Store Name</dt>
    @foreach(var store in Model.Stores)
    {
        
        <dd>@store.StoreName</dd>
    }

</dl>

<button style="background-color:darkblue;"><a asp-action="Index">Back to List</a></button>