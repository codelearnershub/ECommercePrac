@model IEnumerable<ECommerce.Models.RoleDto>




<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Brands</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

           

            <th>
                Update
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => role.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => role.Name)
            </td>
           
            
            <td>
                <a asp-action="Update" asp-route-id="@role.Id">Update</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@role.Id">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<button style="background-color:wheat;"><a asp-controller="Role" asp-action="Create">Add Role</a> </button>
